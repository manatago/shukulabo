<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">ログイン履歴</h1>

  <div class="bg-white shadow overflow-hidden rounded-lg">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ユーザー</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IPアドレス</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ブラウザ情報</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ログイン日時</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @login_histories.each do |history| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= history.user.name %>
                <% if history.user.admin? %>
                  <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">管理者</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= history.ip_address %></td>
              <td class="px-6 py-4 text-sm text-gray-500 max-w-xs truncate"><%= history.user_agent %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= l history.created_at, format: :long %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="mt-6">
    <%= paginate @login_histories %>
  </div>
</div>