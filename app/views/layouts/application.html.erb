<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Shukulabo" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <script>
      (function() {
        // ログインページまたはコールバックページでのみ実行
        if (window.location.pathname === '/' || window.location.pathname.startsWith('/auth/')) {
          // LINEブラウザの検出
          var isLineApp = /Line/.test(navigator.userAgent);
          
          // リダイレクト済みかチェック
          var redirected = sessionStorage.getItem('browser_redirected');
          
          if (isLineApp && !redirected) {
            // リダイレクトフラグを設定
            sessionStorage.setItem('browser_redirected', 'true');
            
            // 現在のURLを取得（クエリパラメータを除去）
            var currentUrl = window.location.origin + window.location.pathname;
            
            // iOSの場合はSafariで開く
            if (/iPhone|iPad|iPod/.test(navigator.userAgent)) {
              window.location.href = currentUrl;
            }
            // Androidの場合はデフォルトブラウザで開く
            else {
              window.location.href = "intent://" + currentUrl.substring(currentUrl.indexOf("://") + 3) + "#Intent;scheme=https;S.browser_fallback_url=" + encodeURIComponent(currentUrl) + ";end";
            }
          }
        }
      })();
    </script>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
      <div class="container">
        <%= link_to "Shukulabo", root_path, class: "navbar-brand" %>
        
        <% if user_signed_in? %>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
              <% if current_user.admin? %>
                <li class="nav-item">
                  <%= link_to "教材管理", teaching_materials_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "宿題管理", homeworks_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ユーザー管理", admin_users_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "生徒グループ管理", admin_account_groups_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "タグ管理", tags_path, class: "nav-link" %>
                </li>
              <% end %>
            </ul>
            
            <div class="navbar-nav">
              <% if impersonating? %>
                <span class="nav-item nav-link text-warning">
                  <%= true_user.name %>が<%= current_user.name %>として操作中
                </span>
                <%= link_to "ログアウトして管理者に戻る",
                    logout_path,
                    class: "nav-link" %>
              <% else %>
                <span class="nav-item nav-link text-light">
                  <%= current_user.name %>
                </span>
                <%= link_to "ログアウト", logout_path, class: "nav-link" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </nav>

    <div data-controller="image-modal">
      <div class="container">
        <% if notice %>
          <div class="alert alert-success alert-dismissible fade show">
            <%= notice %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>

        <% if alert %>
          <div class="alert alert-danger alert-dismissible fade show">
            <%= alert %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>

        <%= yield %>
      </div>

      <%= render "shared/image_modal" %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
